#!/usr/bin/env ruby

require 'slop'
require 'fakeit'

opts = Slop.parse do |o|
  o.string '--spec', 'spec file uri'
  o.integer '-p', '--port', 'custom port'
  o.separator ''
  o.separator 'other options:'
  o.on '-v', '--version' do
    puts Fakeit::VERSION
    exit
  end
  o.on '-h', '--help' do
    puts o
    exit
  end
end

server = Rack::Handler::WEBrick

trap(:INT) do
  if server.respond_to?(:shutdown)
    server.shutdown
  else
    exit
  end
end

app = Fakeit.build(opts[:spec])
server.run(app, Port: opts[:port])
